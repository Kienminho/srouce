<div class="main-content">
    <div class="nav-bar sticky-top-xl bg-white shadow-sm w-100 p-3">
        <div class="row">
            <div class="col-md-5">
                <form action="/app-search" method="get" id="form-search">
                    <div class="input-group mb-0">
                        <input type="text" class="key form-control border-end-0 mb-0" placeholder="Search Apps"
                            aria-label="Recipient's username" aria-describedby="basic-addon2" name="key">
                        <button form="form-search" class="search border-0" type="submit"><span
                                class="input-group-text sit border-start-0" id="basic-addon2"><i
                                    class="bi bi-search"></i></span></button>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
            <div class="col-md-4 text-end">
                <div class="dropdown pt-2">
                    {{#if username}}
                    <a id="user-name" class="cp pt-4 fw-bolder fs-8 dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        {{username}}
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/user/wish-list">Yêu thích</a></li>
                        <li><a class="dropdown-item" href="/user/my-downloads">My Downloads</a></li>
                        <li><a id="upload-modal" href="#" class="dropdown-item" data-bs-toggle="modal"
                                data-bs-target="#uploadModal">Upload</a></li>
                        <li id="logout-link"><a class="dropdown-item" href="/auth/logout">Đăng xuất</a></li>
                    </ul>
                    {{else}}
                    <a id="user-name" class="cp pt-4 fw-bolder fs-8 dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        Xin chào
                    </a>
                    <ul class="dropdown-menu">
                        <li id="login-link"><a class="dropdown-item" href="/auth/login">Đăng nhập</a></li>
                        <li><a class="wish-list dropdown-item" href="/user/wish-list">Yêu thích</a></li>
                        <li><a class="my-downloads dropdown-item" href="/user/my-downloads">My Downloads</a></li>
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    
    {{{body}}}
</div>


<body>
</body>
<div class="modal fade" id="uploadModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Upload ứng dụng</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadForm">
                <div id="uploadBody" class="modal-body">

                    <div input type="text" hidden name="userName" id="userName"></div>

                    <div class="form-group">
                        <label class="form-label" for="fileName">Tên ứng dụng</label>
                        <input type="text" placeholder="Tên ứng dụng" class="form-control" id="fileName"
                            name="nameApp" />
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="fileImage">Hình ảnh</label>
                        <input type="file" placeholder="" class="form-control" id="fileImage" name="image" />
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="file">File</label>
                        <input type="file" placeholder="" class="form-control" id="file" name="file" />
                    </div>


                    <select name="category" id="category" class="form-select" aria-label="Default select example">
                        <option value="none">Loại ứng dụng</option>
                        <option value="G">Game</option>
                        <option value="A">Application</option>
                        <option value="B">Book</option>
                    </select>


                    <div class="form-group">
                        <label class="form-label" for="fileDescription">Mô tả</label>
                        <textarea name="description" rows="5" id="fileDescription" class="form-control"
                            placeholder="Mô tả....."></textarea>
                    </div>
                    <div class="form-group container-progress" style="display:none">
                        <div class="progress" style="height:5px">
                            <div class="progress-bar bg-success" style="width:45%;height:10px"></div>
                        </div>
                    </div>

                    <div id="uploadAlert" style="display:none;" class="alert alert-danger" role="alert">
                        alert
                    </div>

                    <div id="successAlert" style="display:none;" class="alert alert-success" role="alert">
                        alert
                    </div>

                </div>
                <div class="modal-footer">
                    <button id="uploadRequestButton" type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Thông báo -->
<div id="success-modal" class="modal-success">
    <div class="modal-content-success">
        <h2>Thông báo</h2>
        <p id="message">
    </div>
</div>
