<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng kí</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,700" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script src="https://code.jquery.com/jquery-3.6.4.js"
        integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/modalAuth.css">
</head>

<body class="h-100">
    <div class="container-fluid h-100">
        <div class="row">
            <div class="col d-none d-sm-none d-md-block" id="cover"></div>
            <div class="col col-sm col-md-9 col-lg-8 col-xl-6">
                <div class="container h-100 ">
                    <div class="row align-items-center h-100">
                        <div class="col-md-10 col-sm-12 col-12 col-lg-10 mx-auto my-5">
                            <div class="p-5 rounded-3">

                                <div id="text2">Sign up</div>

                                <form action="/auth/register" method="post">

                                    <div class="mb-3">
                                        <label id="label" class="form-label"
                                            for="username"><strong>Username</strong></label>
                                        {{!-- username --}}
                                        <input type="text" class="form-control" id="username"
                                            placeholder="Your username" name="username">
                                    </div>

                                    <div class="mb-3">
                                        <label id="label" class="form-label" for="email"><strong>Email
                                                address</strong></label>
                                        <input type="email" class="form-control" id="email"
                                            placeholder="Example@gmail.com" name="email">
                                    </div>

                                    <div class="mb-3">
                                        <label id="label" class="form-label" for="password"><strong>Create a
                                                password</strong></label>
                                        <input type="password" class="form-control" id="password"
                                            placeholder="Your password" name="password">
                                    </div>

                                    <div class="mb-5">
                                        <label id="label" class="form-label" for="confirm-password"><strong>Confirm
                                                password</strong></label>
                                        <input type="password" class="form-control" id="confirm-password"
                                            placeholder="Repeat password" name="confirm-password">
                                    </div>
                                    {{!-- alert --}}
                                    <div class="mb-3">
                                        <p class="text-danger message-error"></p>
                                    </div>
                                    <div class="message-error">
                                        <p class="text-error text-danger"></p>
                                    </div>
                                    <div class="d-grid gap-0 mb-3">
                                        <!-- Submit button -->
                                        <button id="submit" type="submit" class="btn btn-block text-white">Sign
                                            up</button>
                                    </div>

                                    <div class="register">
                                        <span style="font-size: 16px;">Already have an account?</span>
                                        <a href="/auth/login" class="login-link"><strong>Log in</strong></a>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col d-none d-sm-none d-md-block" id="cover2"></div>
        </div>
    </div>

    <!-- Modal -->
    <div id="success-modal" class="modal-container modal">
        <div class="modal-content">
            <h2>Thông báo</h2>
            <p id="message"></p>
        </div>
    </div>

    <!-- OTP Modal -->
    <div id="otpModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="fs-7 modal-title">Xác nhận OTP đã được gửi đến email của bạn</p>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form action="" class="otp-form">
                        <input class="otp-field" type="text" name="opt-field[]" maxlength=1>
                        <input class="otp-field" type="text" name="opt-field[]" maxlength=1>
                        <input class="otp-field" type="text" name="opt-field[]" maxlength=1>
                        <input class="otp-field" type="text" name="opt-field[]" maxlength=1>
                        <input class="otp-field" type="text" name="opt-field[]" maxlength=1>
                        <input class="otp-field" type="text" name="opt-field[]" maxlength=1>

                        <!-- Store OTP Value -->
                        <input class="otp-value" type="hidden" name="opt-value">
                        <div class="d-block mt-4">
                            <p class="error-otp text-danger" style="display:none">Sai mã, vui lòng nhập lại.</p>
                            <button class="btn-verify btn btn-primary" type="submit">Xác nhận</button>
                            <p class="resend fs-0.5 mt-1">Bạn chưa nhận được? <a
                                    class="text-decoration-none text-primary" href="#">Gửi lại</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="/js/register.js"></script>

</html>